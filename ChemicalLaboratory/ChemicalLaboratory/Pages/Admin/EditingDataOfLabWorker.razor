@page "/adminEditingLabWorker/{workerLogin}"
@using Data;
@inject IJSRuntime JS;
@inject ISnackbar Snackbar;
@inject Radzen.NotificationService NotificationService;
@inject CurrentUser CurrentUser
@inject NavigationManager navigation;

<PageTitle>Изменение данных сотрудника</PageTitle>


<div style="opacity: 1; mix-blend-mode: normal; background-color: rgba(255, 255, 255, 1); align-items: inherit; align-items: flex-start; justify-content: flex-start">
    <button class="buttonOne" @onclick="NavigationToHomePage">
        <p class="pStyle">
            Домашняя страница
        </p>
    </button>
    <button class="buttonTwo" @onclick="NavigationToViewAllWorkers">
        <p class="pStyle">
            Сотрудники
        </p>
    </button>
    <div class="imageBox"></div>
    <div class="boxOne"></div>
    <div class="boxTwo">
        <div style="flex: 10%;"></div>
        <div style="flex: 45%; margin-top: 4%">
            <br />
            <label class="labelStyle" >
                Фамилия:
            </label>
            <input @bind-value="surname" type="text" placeholder="@user.Surname" class="inputStyle" />

            <label class="labelStyle">
                Имя: 
            </label>
            <input @bind-value="name" type="text" placeholder="@user.Name" class="inputStyle" />

            <label class="labelStyle">
                Отчество:
            </label>
            <input @bind-value="patronymic" type="text" placeholder="@user.Patronymic" class="inputStyle" />

            <label class="labelStyle" >
                Логин: @user.Login
            </label>
        </div>

        <div style="flex: 45%; margin-top: 4%">
            <br />
            <label class="labelStyle">
                Пароль:
            </label>
            <input @bind-value="password" type="text" placeholder="@user.Password" class="inputStyle" />
        
            <label class="labelStyle">
                Дата рождения:
            </label>
            <input @bind-value="birthday" type="date" placeholder="@user.DateOfBirth" class="inputStyle" />
        
            <label class="labelStyle">
                Телефон:
            </label>
            <input @bind-value="telephone" type="tel" placeholder="@user.Telephone" class="inputStyle" />
        
            <label class="labelStyle">
                Почта:
            </label>
            <input @bind-value="email" type="text" placeholder="@user.Email" class="inputStyle" />
            
            <label class="labelStyle">
                Роль:
            </label>
            <select @bind="role" name="role" class="selectStyle">
                <option value="Администратор">Администратор</option>
                <option value="Заведующий">Заведующий</option>
                <option value="Лаборант">Лаборант</option>
            </select>
        </div>

        <button class="buttonThree" @onclick="ReplacingLabWorker">
            <p class="pStyleTwo">
                Сохранить
            </p>
        </button>
    </div>
</div>

@code{
    string? surname;
    string? name;
    string? patronymic;
    DateTime? birthday;
    string? password;
    string? telephone;
    string? email;
    string? role;

    UserData user;

    [Parameter]
    public string? workerLogin { get; set; }

    protected override void OnInitialized()
    {
        user = DBConnection.FindUserByLogin(workerLogin);
    }

    public void ReplacingLabWorker()
    {
        if (surname != null && name != null && birthday != null && 
            password != null && telephone != null && email != null && role != null && role != "-")
        {
            DBConnection.ReplaceUser(user);

            Snackbar.Add("Изменения сохранены", Severity.Success);
        }
        else
        {
            Snackbar.Add("Не все поля заполнены корректно.", Severity.Error);
            //ShowNotification(new Radzen.NotificationMessage { Severity = Radzen.NotificationSeverity.Error, Summary = "Ошибка", Detail = "Не все поля заполнены корректно.", Duration = 4000 });
            //JS.InvokeVoidAsync("alert", "Не все поля заполнены корректно.");
        }
    }

    public void NavigationToViewAllWorkers()
    {
        navigation.NavigateTo("/adminViewLabWorker");
    }

    public void NavigationToHomePage()
    {
        navigation.NavigateTo("/admin");
    }

    void ShowNotification(Radzen.NotificationMessage message)
    {
        NotificationService.Notify(message);
    }
}

