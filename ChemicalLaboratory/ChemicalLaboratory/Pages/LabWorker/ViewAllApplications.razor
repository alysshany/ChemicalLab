@page "/labWorkerViewAllApplications"
@using Data;
@inject NavigationManager navigation;

<PageTitle>Index</PageTitle>


<div style="opacity: 1; mix-blend-mode: normal; background-color: rgba(255, 255, 255, 1); align-items: inherit; align-items: flex-start; justify-content: flex-start">
    <button @onclick="NavigationToHomePage" style=" box-shadow: rgba(17, 17, 26, 0.1) 0px 8px 24px, rgba(17, 17, 26, 0.1) 0px 16px 56px, rgba(17, 17, 26, 0.1) 0px 24px 80px; background-color: rgba(169, 172, 251, 0.7) ;position: absolute; width: 14%; left: 75%; transform: translate(-25%, 10%); opacity: 1; mix-blend-mode: normal; padding-left: 10px; padding-right: 10px; padding-top: 10px; align-items: inherit; align-items: flex-start; justify-content: flex-start; border-radius: 20px">
        <p style="letter-spacing: 0; text-transform: none; text-align: center; vertical-align: middle; font-family: Playfair Display; font-size: 20px; color: rgba(0, 0, 0, 1); font-weight: 400; width: 100%">
            Домашняя страница
        </p>
    </button>
    <button @onclick="NavigationToViewAllAnalyzes" style="box-shadow: rgba(17, 17, 26, 0.1) 0px 8px 24px, rgba(17, 17, 26, 0.1) 0px 16px 56px, rgba(17, 17, 26, 0.1) 0px 24px 80px;  background-color: rgba(169, 172, 251, 0.7); position: absolute;width: 10%; left: 88%; transform: translate(-12%, 10%); opacity: 1; mix-blend-mode: normal; padding-left: 10px; padding-right: 10px; padding-top: 10px; align-items: inherit; align-items: flex-start; justify-content: flex-start; border-radius:20px">
        <p style="letter-spacing: 0; text-transform: none; text-align: center; vertical-align: middle; font-family: Playfair Display; font-size: 20px; color: rgba(0, 0, 0, 1); font-weight: 400; width: 100%">
            Пробы
        </p>
    </button>
    <div style="mix-blend-mode: normal; align-items: inherit; background-image: url('/images/image3.png'); background-size: cover; background-position: center; background-repeat: no-repeat; width: 50px; height: 75px"></div>
    <div style="box-shadow: rgba(0, 0, 0, 0.56) 0px 22px 70px 4px; position: absolute; left: 52%; transform: translate(-48%, 6%); opacity: 1; width:87%; height: 600%; mix-blend-mode: normal; background-color: rgba(0, 0, 0, 0.2); align-items: inherit; gap: 10px; padding-left: 10px; padding-right: 10px; padding-top: 10px; padding-bottom: 10px; border-radius: 20px; align-items: flex-start; justify-content: flex-start"></div>
    <div style="overflow: auto; box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px; display: flex;position: absolute; left: 50%; transform: translate(-50%, 10%); width:87%; height:600%; opacity: 1; mix-blend-mode: normal; background-color: rgba(169, 172, 251, 0.7); align-items: inherit; gap: 10px; padding-left: 10px; padding-right: 10px; padding-top: 10px; padding-bottom: 10px; border-radius: 20px; align-items: flex-start; justify-content: flex-start">
        <label style="position: absolute; margin-left: 8%; margin-top: 1%; text-align: left; font-family: Playfair Display; vertical-align: middle; font-size: 28px; color: rgba(0, 0, 0, 1); font-weight: 400; width: 80%">Заявки</label>
        <div style="flex: 10%;"></div>
        <div style="flex: 80%; margin-top: 4%">
            <table class="table">
                <thead>
                    <tr>
                        <th style="letter-spacing: 0; text-transform: none; text-align: center; vertical-align: middle; font-family: Playfair Display; font-size: 24px; color: rgba(0, 0, 0, 1); font-weight: 400;">Наименование</th>
                        <th style="letter-spacing: 0; text-transform: none; text-align: center; vertical-align: middle; font-family: Playfair Display; font-size: 24px; color: rgba(0, 0, 0, 1); font-weight: 400;">Тип</th>
                        <th style="letter-spacing: 0; text-transform: none; text-align: center; vertical-align: middle; font-family: Playfair Display; font-size: 24px; color: rgba(0, 0, 0, 1); font-weight: 400;">Определяемый показатель</th>
                        <th style="letter-spacing: 0; text-transform: none; text-align: center; vertical-align: middle; font-family: Playfair Display; font-size: 24px; color: rgba(0, 0, 0, 1); font-weight: 400;">Месторождение</th>
                        <th style="letter-spacing: 0; text-transform: none; text-align: center; vertical-align: middle; font-family: Playfair Display; font-size: 24px; color: rgba(0, 0, 0, 1); font-weight: 400;">Провести</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var analyze in analyzes)
                    {
                        <tr>
                            <td style="letter-spacing: 0; text-transform: none; text-align: center; vertical-align: middle; font-family: Playfair Display; font-size: 24px; color: rgba(0, 0, 0, 1); font-weight: 400;">@analyze.Title</td>
                            <td style="letter-spacing: 0; text-transform: none; text-align: center; vertical-align: middle; font-family: Playfair Display; font-size: 24px; color: rgba(0, 0, 0, 1); font-weight: 400;">@analyze.Type</td>
                            <td style="letter-spacing: 0; text-transform: none; text-align: center; vertical-align: middle; font-family: Playfair Display; font-size: 24px; color: rgba(0, 0, 0, 1); font-weight: 400;">@analyze.DefinedIndicatorData</td>
                            <td style="letter-spacing: 0; text-transform: none; text-align: center; vertical-align: middle; font-family: Playfair Display; font-size: 24px; color: rgba(0, 0, 0, 1); font-weight: 400;">@analyze.Deposit</td>
                            <td align="center">
                                <button @onclick = "() => NavigationToAddingAnalyze(analyze.Title)" style="background-color: rgba(169, 172, 251, 0.7); box-shadow: 0px 4px 4px  rgba(0, 0, 0, 0.5) ; opacity: 1; mix-blend-mode: normal; padding-left: 10px; padding-right: 10px; padding-top: 10px; align-items: inherit; align-items: flex-start; justify-content: flex-start; border-radius:15px">
                                    <p style="letter-spacing: 0; text-transform: none; text-align: center; vertical-align: middle; font-family: Playfair Display; font-size: 16px; color: rgba(0, 0, 0, 1); font-weight: 400; width: 100%">
                                        Провести
                                    </p>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div style="flex: 10%; margin-top: 4%">

        </div>
    </div>
</div>


@code{
    List<AnalyzeData> analyzes;

    protected override void OnInitialized()
    {
        analyzes = DBConnection.ImportOnlyApplications();
    }

    public void NavigationToHomePage()
    {
        navigation.NavigateTo("/labWorker");
    }

    public void NavigationToViewAllAnalyzes()
    {
        navigation.NavigateTo("/labWorkerViewAnalyzesOfWorker");
    }

    public void NavigationToAddingAnalyze(string title)
    {
        navigation.NavigateTo($"/labWorkerAddingAnalyze/{title}");
    }
}